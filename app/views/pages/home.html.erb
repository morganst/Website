<div class="home-callout text-center container-fluid">
  <h1>Welcome to UserProfiles!</h1>
  <h3>A test site with constantly updated changes</h3>
</div>
<div class="container home-signup-links">
  <div class="row">
      <% if user_signed_in? %>
        <div class="col-md-6">
          <div class="well">
            <h2 class="text-center">Your Profile</h2>
            <p class="text-center">Visit your profile!</p>
            <% if current_user.profile %>
              <%= link_to "Edit Your Profile", edit_user_profile_path(user_id: current_user.id), class: 'btn btn-primary btn-lg btn-block' %>
              <%= link_to "View Your Profile", user_path(id: current_user.id), class: 'btn btn-success btn-lg btn-block' %>
            <% else %>
              <%= link_to "Create your profile!", new_user_profile_path(user_id: current_user.id), class: 'btn btn-default btn-lg btn-block' %>
            <% end %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="well">
            <h2 class ="text-center">The Community</h2>
            <p class="text-center">Visit the community to view others profiles</p>
            <%= link_to "Visit the community", users_path, class: 'btn btn-success btn-lg btn-block' %>
          </div>
        </div>
      <% else %>
        <div class="col-md-6">
          <div class="well">
            <h2 class="text-center">Basic Membership</h2>
            <h4>Sign up for free and get basic access to the community!</h4><br>
            <%= link_to "Sign up with Basic", new_user_registration_path(plan: @basic_plan.id), class: 'btn btn-primary btn-lg btn-block' %>
          </div>
        </div>
        <div class="col-md-6">
          <div class="well">
            <h2 class="text-center">Pro Membership</h2>
            <h4>Using Stripe for card information, will not charge you, and has no added features, don't sign up for this!</h4>
            <%= link_to "Sign up with Pro",  new_user_registration_path(plan: @pro_plan.id), class: 'btn btn-success btn-lg btn-block' %>
          </div>
        </div>
  </div>
  <% end %>
</div>